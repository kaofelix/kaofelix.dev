---
import { Icon } from "astro-icon/components";
const { size = 32, color = "text-zinc-500 dark:text-zinc-300" } = Astro.props;
const socials = [
  {
    name: "github",
    url: "https://github.com/kaofelix",
  },
  {
    name: "bluesky",
    url: "https://bsky.app/profile/kaofelix.dev",
  },
  {
    name: "mastodon",

    url: "https://mastodon.online/@kaofelix",
  },
  {
    name: "linkedin",

    url: "https://www.linkedin.com/in/kaofelix/",
  },
];
---
<ul class={"flex justify-center space-x-3 " + color}>
  {
    socials.map((social) => (
      <li>
        <a
          href={social.url}
          class="hover:text-rose-600 dark:hover:text-rose-500 transition-colors"
          aria-label={social.name}
        >
          <Icon name={social.name + "-fill"} size={size} />
        </a>
      </li>
    ))
  }
</ul>
