---
const isCurrent = (url: string) => {
  return url === Astro.url.pathname;
};

const sections = [
  { title: "about", url: "/" },
  { title: "blog", url: "/blog/" },
];
---

<div class="mb-20">
  <h1
    class="-mt-6 mb-5 text-center uppercase font-black text-9xl text-zinc-500"
  >
    <span class="text-rose-600">kao's</span> page
  </h1>
  <ul class="flex justify-center space-x-3">
    {
      sections.map((section) => (
        <li>
          <a
            href={section.url}
            class={
              "font-black text-4xl inline-block text-gray-500 hover:text-rose-800 " +
              (isCurrent(section.url) ? "text-rose-600" : "")
            }
          >
            {section.title}
          </a>
        </li>
      ))
    }
  </ul>
</div>
