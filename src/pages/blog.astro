---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { sortByDate as sortByRecent } from "../utils";
const allPosts = await getCollection("posts");
---

<BaseLayout title="Blog">
  <div class="mx-auto prose lg:prose-xl dark:prose-invert">
    <h1>blog archive</h1>
    <p>I write about things I learn, and things I like.</p>

    <ul>
      {
        allPosts.sort(sortByRecent).map((post: any) => (
          <li>
            <a class="no-underline hover:underline" href={"/posts/" + post.id}>
              {post.data.pubDate} - {post.data.title}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</BaseLayout>
