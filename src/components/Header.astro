---
const isCurrent = (url: string) => {
  return url === Astro.url.pathname;
};

const sections = [
  { title: "about", url: "/" },
  { title: "blog", url: "/blog/" },
];
---

<div class="flex justify-between items-end space-x-4 mb-20">
  <h1 class="font-extrabold text-5xl text-rose-800">kao's page</h1>
  <ul class="flex space-x-3">
    {
      sections.map((section) => (
        <li>
          <a
            href={section.url}
            class={
              "text-2xl inline-block text-gray-500 hover:text-rose-800 " +
              (isCurrent(section.url) ? "text-rose-800" : "")
            }
          >
            {section.title}
          </a>
        </li>
      ))
    }
  </ul>
</div>
